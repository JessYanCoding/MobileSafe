<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    >
    
    <TextView 
        style="@style/title_style"
        android:text="清理成功"
        android:textColor="#fff"
        android:background="@color/transparent"
        />
    
    
    <TextView 
        android:id="@+id/tv_cache_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="  "
        android:layout_centerInParent="true"
        />
   
    
       <TextView 
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="30sp"
        android:text="成功释放"
        android:layout_toLeftOf="@id/tv_cache_gap"
        android:layout_centerVertical="true"
        />
       
       
        <TextView 
        android:id="@+id/tv_cache_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_toRightOf="@id/tv_cache_gap"
        android:layout_alignBottom="@id/tv"
        android:layout_centerVertical="true"
        />
    
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/big_ok"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_cache_fin"
        android:layout_marginBottom="25dp"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_cache_finish" 
        android:gravity="center"
        android:textColor="#fff"
        android:text="完成"
        android:onClick="finish"
        />
    

</RelativeLayout>