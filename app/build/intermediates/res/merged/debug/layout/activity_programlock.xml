<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockbg2"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical" >

                <TextView
                    style="@style/title_style"
                    android:background="@color/transparent"
                    android:text="程序锁"
                    android:textColor="#7fff" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    
                    <GridView 
                        android:id="@+id/gv_unlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="3" 
                        />
                    <GridView 
                        android:id="@+id/gv_lock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:numColumns="3" 
                        />
                    <LinearLayout 
                        android:id="@+id/ll_lock_setpass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:visibility="invisible"
                        >
                        <EditText 
                            android:id="@+id/et_lock_set1"
                            android:layout_marginTop="40dp"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="请设置安全密码"
                            android:textColor="#8fff"
                            />
                        <EditText 
                            android:id="@+id/et_lock_set2"
                            android:layout_marginTop="40dp"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="请再次确认密码"
                            android:textColor="#8fff"
                            />
                        
                        <Button 
                            android:layout_marginTop="40dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:onClick="setting"
                            android:background="#3fff"
                            android:textColor="#8fff"
                            />
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:id="@+id/ll_lock_inputpass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:visibility="invisible"
                        >
                        <EditText 
                            android:id="@+id/et_lock_input"
                            android:layout_marginTop="100dp"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="请输入安全密码"
                            android:textColor="#8fff"
                            />
                        
                        <Button 
                            android:layout_marginTop="40dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:onClick="ok"
                            android:text="确定"
                            android:background="#3fff"
                            android:textColor="#8fff"
                            />
                        
                    </LinearLayout>
                    
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_unlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="未加锁"
                        android:textColor="#8fff"
                        android:textSize="40sp" />
                    <TextView
                        android:id="@+id/tv_unlockcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="点击图标加锁"
                        android:layout_marginTop="5dp"
                        android:textColor="#8fff"
                        android:textSize="15sp" />
                </FrameLayout>

               <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_lock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3fff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="已加锁"
                        android:textColor="#8fff"
                        android:textSize="40sp" />
                     <TextView
                        android:id="@+id/tv_lockcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="点击图标解锁"
                        android:layout_marginTop="5dp"
                        android:textColor="#8fff"
                        android:textSize="15sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <SlidingDrawer
                android:id="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:content="@+id/mycontent"
                android:handle="@+id/myhandle"
                android:orientation="vertical" >

                <ImageView
                    android:id="@id/myhandle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_button_pull_down" />

                <LinearLayout
                    android:id="@id/mycontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <GridView
                        android:id="@+id/gv_home2_low"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/widget_bg_switch"
                        android:numColumns="4" 
                        />
                </LinearLayout>
            </SlidingDrawer>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_app_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_loading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="努力加载中。。。"
                android:textColor="#8fff" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>