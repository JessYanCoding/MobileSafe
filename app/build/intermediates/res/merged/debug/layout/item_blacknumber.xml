<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
    	
    <TextView
        android:id="@+id/tv_black_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="138888888"
        android:textColor="#bfff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_black_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_black_number"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="短信拦截"
        android:textColor="#8fff"
        android:textSize="16sp" />
    
    <ImageView
        android:id="@+id/iv_black_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/delete_selector"
        />

</RelativeLayout>